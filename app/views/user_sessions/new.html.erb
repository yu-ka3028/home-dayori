<h1 style="text-align: center; font-size: 2em; color: #333;">ログイン</h1>
<div class="container mx-auto flex items-start justify-center h-screen">
  <div class="row">
    <div class=" col-md-10 col-lg-8 mx-auto">
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持する" %>
        </div>
        <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
          <%= image_tag("https://i.gyazo.com/9398355c50f4ed93fdff7e0373702c47.png", alt: "Icon", style: "height: 20px;") %> ログイン
        <% end %>
      <% end %>
      <div class='text-center'>
        <%= link_to new_user_path, class: "btn btn-outline btn-accent" do %>
          <%= image_tag("https://i.gyazo.com/ac1e18e1c22d2ac80d8b787870bd5882.png", alt: "Icon", style: "height: 20px;") %> 新規登録
        <% end %>
        <%= link_to 'パスワードをお忘れの方はこちら', '#' %>
      </div>
    </div>
  </div>
</div>
